<style>
  html {
    font-family: "Noto Sans";
    background-color: #f6f6f6;
    font-size: 100%;
  }

  main {
    max-width: 1000px;
    padding: 1rem;
    margin: auto;
  }

  h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
    text-align: center;
  }

  h2 {
    font-size: 1.3rem;
    text-transform: uppercase;
    margin-bottom: 0;
  }

  h3 {
    font-size: 1.1rem;
    text-decoration: underline;
    font-weight: normal;
    margin: 0;
  }

  hr {
    border: 0;
    height: 1.5px;
    background-color: lightgray;
    margin-top: 0;
  }

  section {
    margin-bottom: 2rem;
  }

  .socials {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .space-between {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  ul.main-section-list {
    list-style-type: none;
    padding-left: 0;
  }

  ul.main-section-list ul li {
    list-style-type: disc;
  }

  ul.main-section-list li p {
    margin: 0.5rem 0;
  }

  ul.main-section-list > li > .space-between,
  ul.main-section-list > li > h3 {
    margin-top: 1.25rem;
  }
</style>
